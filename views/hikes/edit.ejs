<%- include("../partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= hike.name%></div>
		<form class ="ui form" action="/hikes/<%= hike._id%>?_method=PUT" method="POST">
			<div class="field">
				<label>Name</label>
				<input type="text" name="hike[name]" value="<%=hike.name %>">
			</div>
			<div class="field">
				<label>Country</label>
				<input type="text" name="hike[country]" value="<%=hike.country %>">
			</div>
			<div class ="field">
				<label>Location</label>
				<input type="text" name="location" id="location" value="<%= hike.location %>">
			</div>
			<div class ="field">
				<label>Image URL</label>
				<input type="text" name="hike[image]" value="<%=hike.image %>">
			</div>
			<div class ="field">
				<label>Rating (between 1 and 5)</label>
				<input type="number" name="hike[rating]" value="<%=hike.rating%>" min="1" max ="5" step="1">
			</div>
			<div class ="field">
				<label>Link for more information</label>
				<input type="text" name="hike[info]" value="<%=hike.info%>">
			</div>
			<div class="field">
				<label>Description</label>
				<textarea name="hike[description]"><%=hike.description%></textarea>
			</div>
			<input class="ui blue basic button" type="submit">
			<a href="/hikes/<%=hike._id %>" class="ui red basic button">Cancel</a>
		</form>
</div>

<%- include("../partials/footer") %>